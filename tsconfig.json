{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "checkJs": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@myworkspace/ngx-ol": ["libs/ngx-ol/src/index.ts"],
      "@myworkspace/ngx-ol/store": ["libs/ngx-ol/src/lib/+state/ngx-ol/index.ts"],
      "ol": ["node_modules/ol/src"],
      "ol/*": ["node_modules/ol/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
